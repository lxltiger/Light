<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="title"
            type="String" />

        <import type="com.example.ledwisdom1.mesh.MeshActivity" />

        <variable
            name="handler"
            type="com.example.ledwisdom1.mesh.MeshDialog" />

        <variable
            name="viewModel"
            type="com.example.ledwisdom1.mesh.MeshViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/name"
                visibleGone="@{viewModel.type==MeshActivity.TYPE_EDIT_NAME}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:inputType="text"
                android:hint="@string/mesh_name_tip"
                android:text="@={handler.content}" />
            <EditText
                android:id="@+id/account"
                visibleGone="@{viewModel.type==MeshActivity.TYPE_EDIT_ACCOUNT}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:inputType="text"
                android:hint="@string/mesh_name_tip"
                android:text="@={handler.content}" />
            <EditText
                android:id="@+id/psw"
                visibleGone="@{viewModel.type==MeshActivity.TYPE_EDIT_PSW}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:inputType="text"
                android:hint="@string/mesh_psw_tip"
                android:text="@={handler.content}" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{handler::handleClick}"
            android:text="@string/cancel"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{handler::handleClick}"
            android:text="@string/confirm"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container" />
    </android.support.constraint.ConstraintLayout>
</layout>